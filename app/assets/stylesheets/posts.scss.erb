.index-container{
    background-image: url("<%= asset_path('nature.jpg') %>");
    background-position: left top;
	background-repeat: no-repeat;
	background-size: auto;
}
.posts-container{
    padding-top: 110px;
    min-height: 500px;
}
.new-container{
    margin: 0;
    height: 500px;
    background-image: url("<%= asset_path('haiku-post.jpg') %>");
    background-size:cover;
    background-attachment: fixed;
}
.input-container{
    padding-top: 110px;
    text-align: center;
}
.post{
    width: 80%;
    height: 80px;
    text-align: center;
    margin: 0 auto;
    margin-top: 10px;
    position: relative
}
.delete{
    font-size: 7px;
    margin-right: 10px;
}
.all{
    background-color: white;
}
.none{
    background-color: #dbdbdc;
}
.spring{
    background-color: #ffe0ff;
}
.summer{
    background-color: #e0ffe0;
}
.autumn{
    background-color: #ffefe0;
}
.winter{
    background-color: #e0ffff;
}
.post-main{
    position: absolute;
    margin:auto;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    height: 20px;
}
.user-name{
    padding-right: 30px;
    text-align: right;
    text-decoration: none;
    color: black;
}
.categories{
    text-align: center;
    text-decoration: none;
    margin-bottom: 20px;
}
.category{
    text-decoration: none;
    color: #758492;
    font-size: 30px;
    border-radius: 10px;
}