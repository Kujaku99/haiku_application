<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Header Start -->
    <header class="site-header">
      <div class="header-logo">
        <%= link_to("HAIKU", "/home/top", class:"header-logo") %>
      </div>
      <div class="header-list">
        <% if session[:user_id] %>
          <%= link_to(User.find_by(id: session[:user_id]).name, "/users/show/#{session[:user_id]}", class:"header-list") %>
          <%= link_to("投稿一覧", "/posts/index", class:"header-list") %>
          <%= link_to("投稿する", "/posts/new", class:"header-list") %>
          <%= link_to("ログアウト", "/users/logout", {method: :post, class:"header-list"}) %>
        <% else %>
          <%= link_to("ログイン", "/users/login_form", class:"header-list") %>
          <%= link_to("新規登録", "/users/new", class:"header-list") %>
        <% end %>
        
        
        
      </div>
      <% flash.each do |message_type, message| %>
        <div class="message"><%= message %></div>
      <% end %>
    </header>
    <!-- Header End -->
    

    <%= yield %>
  </body>
</html>
