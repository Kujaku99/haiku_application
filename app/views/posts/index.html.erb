<div class="index-container">
  <div class="posts-container">
    <div class="categories">
      <%= link_to("全ての俳句", "/posts/index", class: "category all") %>
      <%= link_to("無季の俳句", "/posts/index/0", class: "category none") %>
      <%= link_to("春の俳句", "/posts/index/1", class: "category spring") %>
      <%= link_to("夏の俳句", "/posts/index/2", class: "category summer") %>
      <%= link_to("秋の俳句", "/posts/index/3", class: "category autumn") %>
      <%= link_to("冬の俳句", "/posts/index/4", class: "category winter") %>
    </div>
  <% @posts.each do |post| %>
    <% if post.season == 0 %>
      <div class="post none">
    <% elsif post.season == 1 %>
      <div class="post spring">
    <% elsif post.season == 2 %>
      <div class="post summer">
    <% elsif post.season == 3 %>
      <div class="post autumn">
    <% elsif post.season == 4 %>
      <div class="post winter">
    <% end %>  
        <div class="post-main">
          <%= "#{post.first} #{post.second} #{post.third}" %>
          <div class="user-name">
            <% if session[:user_id] == post.user_id %>
              <%= link_to("削除", "/posts/delete/#{post.id}", {method: :post, class: "delete"}) %>
            <% end %>
            <%= link_to("詠み人 #{User.find_by(id: post.user_id).name}さん", "/users/show/#{post.user_id}", class: "user-name") %>
          </div>
        </div>
      </div>
    
    
  <% end %>
  </div>
</div>
